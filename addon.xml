<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.kodi.navidrome"
       name="Navidrome"
       version="0.5.5"
       provider-name="colinfredynand">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>audio</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Navidrome music plugin</summary>
        <description lang="en_GB">Browse and play music from Navidrome with scrobbling support</description>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>