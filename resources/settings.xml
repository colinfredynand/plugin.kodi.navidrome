<settings>
    <category label="Server">
        <setting id="server_url" type="text" label="Server URL" default="http://localhost:4533" />
        <setting id="username" type="text" label="Username" default="" />
        <setting id="password" type="text" label="Password" option="hidden" default="" />
    </category>
    
    <category label="Library Sync">
        <setting id="enable_library_sync" type="bool" label="Enable Library Sync" default="false" />
        <setting id="library_path" type="folder" label="Library Path" default="" enable="eq(-1,true)" />
        <setting id="auto_sync" type="bool" label="Auto Sync on Startup" default="false" enable="eq(-2,true)" />
        <setting id="sync_interval" type="enum" label="Auto Sync Interval" values="Never|15 minutes|30 minutes|1 hour|6 hours|12 hours|24 hours" default="Never" enable="eq(-3,true)" />
        <setting id="sync_cover_art" type="bool" label="Download Cover Art" default="true" enable="eq(-4,true)" />
        <setting type="sep" />
        <setting label="Library sync integrates your Navidrome music into Kodi's native library" type="lsep" />
        <setting label="After enabling, use 'Sync Library' from the addon menu" type="lsep" />
    </category>
    
    <category label="Playback">
        <setting id="enable_transcoding" type="bool" label="Enable Transcoding" default="false" />
        <setting id="max_bitrate" type="enum" label="Max Bitrate" values="64|96|128|160|192|256|320" default="192" enable="eq(-1,true)" />
        <setting id="transcode_format" type="enum" label="Transcode Format" values="mp3|opus|aac" default="mp3" enable="eq(-2,true)" />
    </category>
    
    <category label="Scrobbling">
        <setting id="enable_scrobbling" type="bool" label="Enable Scrobbling" default="true" />
        <setting id="scrobble_threshold" type="slider" label="Scrobble After (%)" default="50" range="10,5,90" option="percent" enable="eq(-1,true)" />
        <setting id="enable_now_playing" type="bool" label="Update Now Playing" default="true" />
    </category>
    
    <category label="Display">
        <setting id="items_per_page" type="enum" label="Items Per Page" values="50|100|200|500|1000" default="500" />
        <setting id="show_track_numbers" type="bool" label="Show Track Numbers in Title" default="false" />
    </category>
    
    <category label="Advanced">
        <setting id="api_timeout" type="slider" label="API Timeout (seconds)" default="10" range="5,1,30" />
        <setting id="enable_debug" type="bool" label="Enable Debug Logging" default="false" />
        <setting id="use_native_api" type="bool" label="Use Native API (when available)" default="true" />
    </category>
</settings>